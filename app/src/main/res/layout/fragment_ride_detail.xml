<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="mc.usi.org.mobilecomputingproject.Views.RideDetail.RideDetailFragment">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </com.google.android.gms.maps.MapView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Date"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/date_detail_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="01/01/2001"
                            android:textAlignment="center"
                            android:textSize="22sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Duration"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/duration_detail_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="10dp"
                            android:textSize="22sp"
                            android:text="00:01:01"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Max Speed"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/max_speed_detail_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="10dp"
                            android:textSize="22sp"
                            android:text="80 Km/h"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Avg. Speed"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/avg_speed_detail_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="10dp"
                            android:textSize="22sp"
                            android:text="49 Km/h"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Max. Lean Angle"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/max_lean_angle_detail_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="10dp"
                            android:textSize="22sp"
                            android:text="43°"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Avg. Lean Angle"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/avg_lean_angle_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="22°"
                            android:textAlignment="center"
                            android:textSize="22sp"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="GPS Points"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/gps_points_detail_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="10dp"
                            android:textSize="22sp"
                            android:text="158"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Distance"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/separatorColor">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/distance_detail_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="10dp"
                            android:textSize="22sp"
                            android:text="30 Km"/>

                    </LinearLayout>


                </LinearLayout>


                <Button
                    android:id="@+id/make_route_public_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Make Public"/>
            </LinearLayout>



        </ScrollView>




</FrameLayout>
